<UserControl
    x:Class="VisionProcess.Core.Controls.ImageRecord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VisionProcess.Core.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Record"
    Width="444"
    d:Background="Wheat"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <ComboBox
                DisplayMemberPath="Title"
                DockPanel.Dock="Top"
                ItemsSource="{Binding ElementName=Record, Path=RecordSource}"
                SelectedItem="{Binding ElementName=Record, Path=SelectedRecord}"
                Style="{StaticResource MahApps.Styles.ComboBox}" />
            <local:ImageEx
                x:Name="image"
                Title="{Binding ElementName=Record, Path=SelectedRecord.Title}"
                ImageSource="{Binding ElementName=Record, Path=SelectedRecord.DisplayImage}" />
        </DockPanel>
    </Grid>
</UserControl>